<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/album_linear_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/addPhotoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/gridView"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:background="@color/foreGreen"
            android:onClick="addPhotoBtn"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/add_photo"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/backAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:background="@color/foreGreen"
            android:onClick="backAlbum"
            android:text="back"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/deleteAlbumBtn"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/backAlbum"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="60dp"
            android:columnWidth="100dp"
            android:horizontalSpacing="5dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp" />

        <Button
            android:id="@+id/deleteAlbumBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:background="@color/foreGreen"
            android:onClick="deleteAlbum"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Delete Album"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/editNameBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:background="@color/foreGreen"
            android:onClick="renameAlbum"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Rename Album"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>
